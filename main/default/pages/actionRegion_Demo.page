<apex:page controller="actionRegion_Demo">
    <apex:form >
        <apex:pageBlock id="pb">
            <apex:pageBlockSection columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputPanel >
                        <apex:outputLabel value="Student Number"/>
                    </apex:outputPanel>
                    
                    <apex:outputPanel >
                        <apex:actionRegion >
                            <apex:inputText value="{!studNum}"/> &nbsp;&nbsp;
                            <apex:commandButton value="Search" action="{!retrieveStudnetsRecords}" reRender="pb" />
                        </apex:actionRegion>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>            
                <apex:inputField value="{!studObject.Student_Name__c}"/>
                <apex:inputField value="{!studObject.Student_Contact__c}"/>
                <apex:inputField value="{!studObject.Student_Email__c}"/>
            </apex:pageBlockSection>        
        </apex:pageBlock>
    </apex:form>
</apex:page>
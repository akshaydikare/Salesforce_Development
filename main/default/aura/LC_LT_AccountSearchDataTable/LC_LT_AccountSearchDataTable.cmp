<aura:component controller="CL_LT_getAccList_DataTable">
    <aura:attribute name="acc" type="Account[]"/>
    <aura:attribute name="st" type="string"/>
    <aura:attribute name="columns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.loadColumns}"/>
    <lightning:card title="Search Account and Show in Datatable">
           <lightning:layout>
            <lightning:layoutItem size="6">
                <lightning:input lable="Enter the Search Text: " value="{!v.st}"/>
            </lightning:layoutItem> 
            <lightning:layoutItem size="6">
                <lightning:button class="slds-button slds-button--brand slds-button--small" label="Search" onclick="{!c.searchMe}"/> 
            </lightning:layoutItem> 
        </lightning:layout>

		<aura:if isTrue="{!v.acc.length > 0}">
             <lightning:datatable keyField="id" data="{!v.acc}" columns="{!v.columns}" hideCheckboxColumn="false"/>
        </aura:if>
       
    </lightning:card>
</aura:component>